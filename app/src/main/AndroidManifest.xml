<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cfreesespuffs.github.giftswapper" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Giftswapper" >
        <activity android:name=".InvitationList" /> <!-- <activity android:name=".PendingPartyFragment" /> -->
        <activity android:name=".Activities.SignupConfirmation" />
        <activity android:name=".Activities.SignUp" />
        <activity android:name=".Activities.Login" />
        <activity
            android:name=".PostParty"
            android:theme="@style/Theme.AllNoActionBarNone"
            />
        <activity android:name=".Activities.CurrentParty"
            android:theme="@style/Theme.Giftswapper.NoActionBar" />
<!--            />-->
        <activity android:name=".Activities.EndedPartyCheck"/>
        <activity
            android:theme="@style/Theme.AllNoActionBarNone"
            android:name=".PendingPage"/>
        <activity android:name=".Activities.InvitationDetails" />
        <activity android:name=".Activities.HostParty" />
        <activity android:name=".Activities.UserProfile" />
        <activity android:name=".Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>

