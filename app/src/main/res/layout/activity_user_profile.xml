<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    >

    <TextView
        android:id="@+id/userNameProfileTv"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/main_accent"
        android:elegantTextHeight="true"
        android:paddingTop="25dp"
        android:text="userName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allTheGifts"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameProfileTv" />
    <!--         android:id="@+id/UserProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="UserProfileName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" /> -->

    <ImageButton
        android:id="@+id/homePartyDetailButton3"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginTop="604dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gold_yellow"
        android:backgroundTint="#99ED8922"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>