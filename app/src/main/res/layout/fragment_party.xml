<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    tools:context=".Fragments.PartyFragment">

    <TextView
        android:id="@+id/party_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/party_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Title"
        app:layout_constraintBottom_toBottomOf="@+id/party_date"
        app:layout_constraintEnd_toStartOf="@+id/party_date"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/party_date" />

    <TextView
        android:id="@+id/party_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="32dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="@+id/party_time"
        app:layout_constraintEnd_toStartOf="@+id/party_time"
        app:layout_constraintTop_toTopOf="@+id/party_time" />

</androidx.constraintlayout.widget.ConstraintLayout>