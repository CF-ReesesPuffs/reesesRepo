<?xml version="1.0" encoding="utf-8"?><!--  https://www.tutorialspoint.com/how-to-create-edittext-with-rounded-corners-in-android-->


<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="0dp"
        android:left="-15dp"
        android:right="-15dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="5dp"
                android:color="#595959" />
            <solid android:color="#B3F0F0F0" />
            <padding android:left="10dp"
                android:right="10dp"
                android:top="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

</layer-list>

